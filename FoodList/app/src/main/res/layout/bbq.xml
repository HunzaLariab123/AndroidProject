<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Burger"

                android:textSize="20dp"

                />
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Italian"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/bbq"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/RED"
                android:text="BBQ"
                android:textSize="20dp"
                />
        </LinearLayout>
        //1
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
          <ImageView
              android:layout_width="140dp"
              android:layout_height="120dp"
              android:src="@drawable/sa"

              />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hot Spicy Sausage"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:paddingLeft="7dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"

                    />
            </LinearLayout>


        </LinearLayout>

        //2

        <ScrollView
            android:layout_width="352dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:src="@drawable/fchi"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Italian Chicken Frie"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:paddingLeft="7dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"

                    />
            </LinearLayout>


        </LinearLayout>
        //3

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:src="@drawable/gola"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spicy Beef Gola Kabab"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:paddingLeft="7dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"

                    />
            </LinearLayout>
        </LinearLayout>

        //4
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:src="@drawable/f"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Grill Fish"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:paddingLeft="7dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"

                    />
            </LinearLayout>
        </LinearLayout>
        //5
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:src="@drawable/tik"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hot And Spicy Beef Tikka"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:paddingLeft="7dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"

                    />
            </LinearLayout>
        </LinearLayout>
        //6
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:src="@drawable/beefbo"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beef Boti Grill"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:paddingLeft="7dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"

                    />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>




</ScrollView>